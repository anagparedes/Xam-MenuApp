<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   x:Class="MenuApp.Views.MenuView">
    <StackLayout>
        <Image Source="{Binding Image}" Style="{StaticResource ImageLabelStyle}"/>
        <Label Text="{Binding Title}"   Style="{StaticResource ContentHeaderLabelStyle}"/>
        <Label Text="{Binding Detail}" Style="{StaticResource ContentLabelStyle}"/>
    </StackLayout>
 
</Frame>