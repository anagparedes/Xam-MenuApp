<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuApp.Views.DiscoveryPage"
            xmlns:views="clr-namespace:MenuApp.Views" 
             Title="Discovery"
             IconImageSource="discovery.png"
              BackgroundColor="#e6ece2">
    
    <Grid Padding="15" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*" VerticalOptions="Center" ColumnSpacing="10" RowSpacing="10">
        <Label Text="Discovery" Style="{StaticResource TitleLabelStyle}"/>
        <views:MenuView Grid.Column="0" Grid.Row="1" BindingContext="{Binding Option1}"/>
        <views:MenuView Grid.Column="0" Grid.Row="2" BindingContext="{Binding Option2}" />
        <views:MenuView Grid.Column="0" Grid.Row="3" BindingContext="{Binding Option3}"/>
        <views:MenuView Grid.Column="1" Grid.Row="1" BindingContext="{Binding Option4}"/>
        <views:MenuView Grid.Column="1" Grid.Row="2" BindingContext="{Binding Option5}"/>
        <views:MenuView Grid.Column="1" Grid.Row="3" BindingContext="{Binding Option6}"/>


    </Grid>
</ContentPage>